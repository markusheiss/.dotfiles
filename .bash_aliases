#### System Config

alias config="emacst ~/.bashrc"
alias reload="source ~/.bashrc"
alias ealias="emacst ~/.bash_aliases"
alias dpi="emacst ~/.Xresources"
alias mdpi="xrdb -merge ~/.Xresources"

#### Shortcuts

alias c="clear"
alias ls="exa"
alias l="exa -l"
alias la="exa -la"

alias reboot="sudo reboot"
alias shutdown="sudo shutdown now"

alias install="sudo apt install"
alias upd="sudo apt update"
alias upg="sudo apt upgrade"

alias run="./a.out"

alias emacs="emacsclient -c -a 'emacs'"
alias emacst="emacsclient -c -t -a 'emacs'"

alias obsidian="~/apps/Obsidian-0.14.6.AppImage &"

#### Storage
alias gdrive="cd ~/gdrive"
alias tower="cd ~/tower"
alias icloud="cd ~/icloud"
